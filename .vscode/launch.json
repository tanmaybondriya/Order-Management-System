{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with Nodemon (local)",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "nodemon",
        "--inspect=9229",
        "${workspaceFolder}/src/server.js"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
